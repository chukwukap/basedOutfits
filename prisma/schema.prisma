generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  username      String         @unique
  fid           String?
  walletAddress String?
  email         String?        @unique
  name          String?
  bio           String?
  avatarUrl     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  outfits       Outfit[]
  wardrobes     Wardrobe[]
  likes         Like[]
  comments      Comment[]
  saves         WardrobeItem[]
  tipsSent      Tip[]          @relation("tipsSent")
  tipsReceived  Tip[]          @relation("tipsReceived")
  notifications Notification[]

  @@index([username])
}

model Outfit {
  id          String   @id @default(cuid())
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  caption     String?
  description String?
  imageUrls   String[]
  details     Json?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  likes    Like[]
  comments Comment[]
  saves    WardrobeItem[]
  tips     Tip[]

  @@index([authorId])
}

model Wardrobe {
  id          String   @id @default(cuid())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  name        String
  description String?
  coverImage  String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items WardrobeItem[]

  @@index([ownerId])
}

model WardrobeItem {
  id         String   @id @default(cuid())
  outfitId   String
  outfit     Outfit   @relation(fields: [outfitId], references: [id])
  wardrobeId String
  wardrobe   Wardrobe @relation(fields: [wardrobeId], references: [id])
  addedById  String
  addedBy    User     @relation(fields: [addedById], references: [id])
  createdAt  DateTime @default(now())

  @@unique([outfitId, wardrobeId])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  outfitId  String
  outfit    Outfit   @relation(fields: [outfitId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, outfitId])
}

model Comment {
  id        String   @id @default(cuid())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  outfitId  String
  outfit    Outfit   @relation(fields: [outfitId], references: [id])
  content   String
  createdAt DateTime @default(now())

  @@index([outfitId])
}

model Tip {
  id         String   @id @default(cuid())
  senderId   String
  sender     User     @relation("tipsSent", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("tipsReceived", fields: [receiverId], references: [id])
  outfitId   String?
  outfit     Outfit?  @relation(fields: [outfitId], references: [id])
  amount     Float
  currency   String
  txHash     String?
  createdAt  DateTime @default(now())

  @@index([senderId])
  @@index([receiverId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  entityId  String?
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model FeedFilter {
  id        String   @id @default(cuid())
  name      String
  query     String?
  createdAt DateTime @default(now())
}
